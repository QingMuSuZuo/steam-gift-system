<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Steam礼物提货系统 - <%= title %></title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/public.css">
    <!-- Extra CSS -->
    <% if (typeof extraCSS !== 'undefined') { %>
        <% extraCSS.forEach(function(css) { %>
            <link rel="stylesheet" href="<%= css %>">
        <% }); %>
    <% } %>
</head>
<body class="bg-light">
    <header class="bg-dark text-white shadow-sm">
        <div class="container">
            <div class="d-flex align-items-center justify-content-between py-3">
                <a href="/" class="text-decoration-none">
                    <div class="d-flex align-items-center">
                        <img src="/images/steam-logo.png" alt="Steam Logo" height="40" class="me-2">
                        <h1 class="h4 m-0 text-white">Steam礼物提货系统</h1>
                    </div>
                </a>
            </div>
        </div>
    </header>

    <main class="py-4">
        <div class="container">
            <% if (typeof messages !== 'undefined' && messages.error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= messages.error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="关闭"></button>
                </div>
            <% } %>
            <% if (typeof messages !== 'undefined' && messages.success) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= messages.success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="关闭"></button>
                </div>
            <% } %>
            <% if (typeof messages !== 'undefined' && messages.info) { %>
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <%= messages.info %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="关闭"></button>
                </div>
            <% } %>

            <%- body %>
        </div>
    </main>

    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; <%= new Date().getFullYear() %> Steam礼物提货系统 - v1.0</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">联系客服: <a href="mailto:support@example.com" class="text-decoration-none text-white">support@example.com</a></p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/public.js"></script>
    <!-- Extra JS -->
    <% if (typeof extraJS !== 'undefined') { %>
        <% extraJS.forEach(function(js) { %>
            <script src="<%= js %>"></script>
        <% }); %>
    <% } %>
</body>
</html>
